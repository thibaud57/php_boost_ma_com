<form method="post" action="{{ path('rqst_delete', {'id': rqst.id}) }}" onsubmit="return confirm('Voulez vous supprimer votre demande?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ rqst.id) }}">
    <button class="btn btn-square btn-danger">Supprimer</button>
</form>
