{% extends 'base.html.twig' %}

{% block title %}Company{% endblock %}

{% block body %}
    <h1>Société</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Raison sociale</th>
                <td>{{ company.name }}</td>
            </tr>
            <tr>
                <th>Adresse</th>
                <td>{{ company.address }}</td>
            </tr>
            <tr>
                <th>Ville</th>
                <td>{{ company.city }}</td>
            </tr>
            <tr>
                <th>Code postal</th>
                <td>{{ company.zipcode }}</td>
            </tr>
            <tr>
                <th>Siret</th>
                <td>{{ company.siret }}</td>
            </tr>
        </tbody>
    </table>

    <button onclick="location.href='{{ path('company_edit', {'id': company.id}) }}'" type="button" class="btn btn-square btn-outline-warning">Editer</button>
    {{ include('company/_delete_form.html.twig') }}

    <a href="{{ path('company_index') }}">Retour</a>

{% endblock %}
