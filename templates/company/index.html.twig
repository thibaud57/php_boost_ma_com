{% extends 'base.html.twig' %}

{% block title %}Company index{% endblock %}

{% block body %}
    <h1>Liste des sociétés</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Raison sociale</th>
                <th>Adresse</th>
                <th>Ville</th>
                <th>Code postal</th>
                <th>Siret</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for company in companies %}
            <tr>
                <td>{{ company.name }}</td>
                <td>{{ company.address }}</td>
                <td>{{ company.city }}</td>
                <td>{{ company.zipcode }}</td>
                <td>{{ company.siret }}</td>
                <td>
                    <a href="{{ path('company_show', {'id': company.id}) }}">Montrer</a>
                    <a href="{{ path('company_edit', {'id': company.id}) }}">Editer</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">Aucune sociétés</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <button onclick="location.href='{{ path('company_new') }}'" type="button" class="btn btn-square btn-success">Créer une société</button>

{% endblock %}
